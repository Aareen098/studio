
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /hiringRequests/{hiringRequestId} {
      // Allow ANYONE to create a new submission (i.e., submit the hire me form)
      allow create: if true;

      // By default, deny all other operations for security
      allow read, update, delete: if false;
    }
  }
}
